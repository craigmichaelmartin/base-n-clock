<?xml version="1.0" encoding="utf-8" ?>
<component name="ClockCard" extends="Group">
    <interface>
        <field id="cardConfig" type="assocarray" />
        <field id="currentHour" type="integer" value="0" />
        <field id="currentMinute" type="integer" value="0" />
        <field id="focused" type="boolean" value="false" />
    </interface>
    <script type="text/brightscript" uri="ClockCard.brs" />
    <children>
        <!-- Invisible spacer for LayoutGroup sizing (height set dynamically) -->
        <Rectangle id="cardBg" width="960" height="116" color="0x00000000" opacity="0" />

        <!-- Accent line at top of card -->
        <Rectangle id="accentLine" width="960" height="1" color="0xFFFFFF26" />

        <!-- Clock name label (left-aligned) -->
        <Label id="nameLabel" text="" translation="[24, 10]" color="0xFFFFFFFF">
            <Font role="font" uri="font:SystemFontFile" size="16" />
        </Label>

        <!-- Base label (right-aligned) -->
        <Label
            id="baseLabel"
            text=""
            width="912"
            horizAlign="right"
            translation="[24, 10]"
            color="0x2A2A2AFF"
        >
            <Font role="font" uri="font:SystemFontFile" size="16" />
        </Label>

        <!-- Time display (position and height set dynamically) -->
        <Label
            id="timeLabel"
            text=""
            width="960"
            horizAlign="center"
            vertAlign="center"
            color="0xFFFFFFFF"
        />

        <!-- Hour dot grid (position set dynamically) -->
        <DotGrid id="hourGrid" />

        <!-- Minute dot grid (position set dynamically) -->
        <DotGrid id="minGrid" />
    </children>
</component>
